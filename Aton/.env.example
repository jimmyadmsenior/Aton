# Database
DATABASE_URL="postgresql://username:password@localhost:5432/aton_db"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# JWT (alternative to NextAuth)
JWT_SECRET="your-jwt-secret-here"

# Supabase (for file uploads)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# AWS S3 (alternative to Supabase)
S3_ACCESS_KEY="your-s3-access-key"
S3_SECRET_KEY="your-s3-secret-key"
S3_BUCKET="aton-uploads"
S3_REGION="us-east-1"

# Mapbox (optional, alternative to OpenStreetMap)
NEXT_PUBLIC_MAPBOX_TOKEN="your-mapbox-token"

# Environment
NODE_ENV="development"

# Rate Limiting (optional)
REDIS_URL="redis://localhost:6379"

# Email (optional for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"